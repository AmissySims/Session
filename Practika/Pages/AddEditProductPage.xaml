<Page x:Class="Practika.Pages.AddEditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practika.Pages"
      mc:Ignorable="d" 
      DataContext="{Binding RelativeSource={RelativeSource Self}}" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditProductPage">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" >
                <Image x:Name="ProductImage" Source="{Binding Photo}" Width="180" Height="180"/>
                <Button Style="{StaticResource MyButton}" Content="Добавить изображение" Click="Button_Click"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Style="{StaticResource Text}" Text="Название"/>
                    <TextBox Text="{Binding Title}" Width="200" Height="20" Margin="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Style="{StaticResource Text}" Text="Цена"/>
                    <TextBox Text="{Binding Cost}" Width="200" Height="20" Margin="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Style="{StaticResource Text}" Text="Описание"/>
                    <TextBox Text="{Binding Description}" Width="200" Height="20" Margin="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Style="{StaticResource Text}" Text="Дата"/>
                    <TextBox Text="{Binding DateOfAddition}" Height="20" Width="200" Margin="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Style="{StaticResource Text}" Text="Ед. измерения"/>
                    <TextBox Text="{Binding UnitOfMeansurementId}" Height="20" Width="200" Margin="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Style="{StaticResource Text}" Text="Количество"/>
                    <TextBox Text="{Binding QuantityInStock}" Height="20" Width="200" Margin="5"/>
                </StackPanel>
                <Button Style="{StaticResource MyButton}" Content="Сохранить" Click="Button_Click_1"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
