<Page x:Class="Practika.Pages.ProductsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practika.Pages"
      mc:Ignorable="d" 
      Name="Root"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsListPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="183*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
       
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text="Количество записей" Style="{StaticResource Text}" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ComboBox x:Name="CountCb"  Margin="5" Width="50" Height="30">
                    <ComboBoxItem Content="Все"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="50"/>
                    <ComboBoxItem Content="200"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text="Сортировка" Style="{StaticResource Text}" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ComboBox x:Name="SortCb"  Margin="5" Width="80" Height="30">
                    <ComboBoxItem Content="По умолчанию"/>
                    <ComboBoxItem Content="От А до Я"/>
                    <ComboBoxItem Content="Сначала новые"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text="Фильтрация" Style="{StaticResource Text}" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ComboBox x:Name="FilterCb"  Margin="5" Width="80" Height="30">
                    <ComboBoxItem Content="Все"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text="Поиск" Style="{StaticResource Text}" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBox x:Name="FoundTb" Width="120" Height="30" />
            </StackPanel>
        </StackPanel>
        <ListView Grid.Row="1">
            
        </ListView>
        <StackPanel Grid.Row="2">
            
        </StackPanel>
    </Grid>
</Page>
